{
  "name": "extension-azure-devops",
  "version": "2.58.4",
  "description": "Dependabot Azure DevOps task",
  "license": "AGPL-3.0-later",
  "author": "mburumaxwell",
  "private": true,
  "scripts": {
    "dev": "tsc --watch",
    "prebuild": "tsc",
    "build:V1": "ncc build src/v1/main.ts --out tasks/dependabotV1/dist/main --target es2022 --source-map --external none",
    "build:V2": "ncc build src/v2/main.ts --out tasks/dependabotV2/dist/main --target es2022 --source-map --external none",
    "build:cleanup": "ncc build src/v2/cleanup.ts --out tasks/dependabotV2/dist/cleanup --target es2022 --source-map --external none",
    "build": "pnpm run build:V1 && pnpm run build:V2 && pnpm run build:cleanup",
    "start": "pnpm start:V2",
    "start:V1": "node tasks/dependabotV1/dist/index.js",
    "start:V2": "node tasks/dependabotV2/dist/index.js",
    "lint": "biome check",
    "test": "vitest",
    "clean": "rimraf .turbo dist tasks/dependabotV1/dist tasks/dependabotV2/dist",
    "packages:version": "node scripts/update-versions.mjs",
    "package": "pnpm tfx extension create --json5"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/mburumaxwell/dependabot-azure-devops.git"
  },
  "keywords": [
    "dependabot",
    "azure",
    "devops"
  ],
  "bugs": {
    "url": "https://github.com/mburumaxwell/dependabot-azure-devops/issues"
  },
  "homepage": "https://github.com/mburumaxwell/dependabot-azure-devops#readme",
  "dependencies": {
    "@paklo/cli": "workspace:*",
    "azure-pipelines-task-lib": "5.2.1",
    "semver": "7.7.2"
  },
  "devDependencies": {
    "@types/node": "24.5.2",
    "@types/q": "1.5.8",
    "@types/semver": "7.7.1",
    "@vercel/ncc": "0.38.4",
    "tfx-cli": "0.22.1"
  }
}
