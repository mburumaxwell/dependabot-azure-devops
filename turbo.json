{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.env.*", "**/biome.json", "**/vitest.config.*"],
  "globalEnv": [
    "NODE_ENV",
    "NEXT_PUBLIC_APP_INSIGHTS_CONNECTION_STRING",
    "BETTER_AUTH_SECRET",
    "DATABASE_URL",
    "DATABASE_URL_UNPOOLED",
    "RESEND_API_KEY",
    "ADMIN_DASHBOARD_PASSWORD",
    "POLAR_ACCESS_TOKEN",
    "POLAR_WEBHOOK_SECRET"
  ],
  "globalPassThroughEnv": ["GOPATH"],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "tasks/**/dist/**", ".next/**", "!.next/cache/**", "out/**"]
    },
    "lint": {},
    "test": {},
    "clean": {
      "cache": false
    },
    "package": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "packages:version": {
      "cache": false
    }
  }
}
