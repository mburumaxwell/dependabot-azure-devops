{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env", "**/.env.*", "**/biome.json", "**/vitest.config.*"],
  "globalEnv": ["NEXT_RUNTIME", "NODE_ENV", "ADMIN_USER_IDS"],
  "globalPassThroughEnv": [
    "LOG_LEVEL",
    "ADMIN_DASHBOARD_PASSWORD",
    "APPLICATIONINSIGHTS_CONNECTION_STRING",
    "AZURE_TENANT_ID",
    "AZURE_CLIENT_ID",
    "AZURE_SUBSCRIPTION_ID",
    "AZURE_RESOURCE_GROUP",
    "AZURE_RESOURCE_GROUP_JOBS",
    "AZURE_MANAGED_ENVIRONMENT_ID",
    "AZURE_KEY_VAULT_URL",
    "AZURE_BLOB_STORAGE_URL",
    "AXIOM_API_KEY",
    "BETTER_AUTH_SECRET",
    "CONTAINER_APP_ENV_DNS_SUFFIX",
    "CONTAINER_APP_NAME",
    "CRON_SECRET",
    "DEPLOY_GIT_COMMIT_REF",
    "DEPLOY_GIT_COMMIT_SHA",
    "GITHUB_TOKEN",
    "LOG_LEVEL",
    "MONGO_DATABASE_URL",
    "PORT",
    "RESEND_API_KEY",
    "STRIPE_SECRET_KEY",
    "STRIPE_WEBHOOK_SECRET",
    "VERCEL",
    "VERCEL_BRANCH_URL",
    "VERCEL_GIT_COMMIT_REF",
    "VERCEL_GIT_COMMIT_SHA"
  ],
  "tasks": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", "tasks/**/dist/**", ".next/**", "!.next/cache/**", "out/**"]
    },
    "lint": {},
    "test": {},
    "clean": {
      "cache": false
    },
    "package": {
      "cache": false
    },
    "dev": {
      "cache": false,
      "persistent": true
    },
    "packages:version": {
      "cache": false
    }
  }
}
