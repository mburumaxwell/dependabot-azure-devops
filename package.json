{
  "name": "paklo",
  "version": "0.0.0",
  "license": "AGPL-3.0-later",
  "author": "mburumaxwell",
  "private": true,
  "type": "module",
  "scripts": {
    "format": "biome format --write",
    "format:check": "biome format",

    "changeset": "changeset",
    "packages:version": "changeset version && turbo run packages:version",
    "packages:publish": "changeset publish",

    "web:start": "turbo run start --filter=web...",
    "web:dev": "turbo run dev --filter=web...",
    "web:build": "turbo run build --filter=web...",
    "web:clean": "turbo run clean --filter=web...",

    "extensions-azure:start": "turbo run start --filter=extension-azure-devops...",
    "extensions-azure:build": "turbo run build --filter=extension-azure-devops...",
    "extensions-azure:lint": "turbo run lint --filter=extension-azure-devops...",

    "build": "turbo run build",
    "lint": "turbo run lint",
    "test": "turbo run test",
    "package": "turbo run package",
    "clean": "turbo run clean && rimraf .turbo"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.7",
    "@changesets/cli": "2.29.8",
    "husky": "9.1.7",
    "rimraf": "6.1.2",
    "turbo": "2.6.1",
    "typescript": "5.9.3",
    "vite": "7.2.4",
    "vite-tsconfig-paths": "5.1.4",
    "vitest": "4.0.14"
  },
  "engines": {
    "node": ">=22"
  },
  "packageManager": "pnpm@10.13.1",
  "pnpm": {
    "overrides": {
      "@workflow/world-local>undici": "~6.21.2",
      "tfx-cli>validator": ">=13.15.20"
    }
  }
}
